<%= form_with model: @studio do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
    <% @studio.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %><br>
    <% @studio.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :style %><br>
    <%= form.text_area :style %><br>
    <% @studio.errors.full_messages_for(:style).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>


  <div>
    <%= form.submit %>
  </div>
<% end %>